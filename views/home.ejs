<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <div class="container">
        <h1>JOIN US</h1>
        <p class="lead">Enter your email to join <strong><%= count %></strong> others on our waitlist. </p>
        <form method="POST" action='/register'>
            <input type="text" class="form" name="email" placeholder="Enter Your Email">
            <button>Join Now</button>
        </form>
      <h3>Submitted emails!</h3>
      <div>
        <ul>
          <% for (var i = 0; i < emails.length; i++) { %>
          <li><%= emails[i].email %></li>
          <% }; %>
        </ul>
      </div>
    </div>
    <script src="/__/firebase/7.2.1/firebase-app.js"></script>
    <script src="/__/firebase/7.2.1/firebase-analytics.js"></script>
    <script src="/__/firebase/7.2.1/firebase-auth.js"></script>
    <script src="/__/firebase/7.2.1/firebase-firestore.js"></script>
    <script src="/__/firebase/init.js"></script>
</body>
